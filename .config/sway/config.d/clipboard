set $clipman ~/dev/go/bin/clipman

# start clipman clipboard manager
exec_always pkill wl-paste

# Start clipman clipboard manager
exec_always wl-paste -t text --watch $clipman store --histpath="~/.local/share/clipman-noprimary.json" 1>> ~/.cache/clipman.log 2>&1
exec_always wl-paste -p -t text --watch $clipman store --histpath="~/.local/share/clipman-primary.json" 1>> ~/.cache/clipman.log 2>&1

# clipboard keybindings
bindsym $mod+p exec $clipman pick --tool=rofi --histpath="~/.local/share/clipman-primary.json"
