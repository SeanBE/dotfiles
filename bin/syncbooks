#!/bin/bash
rclone sync --dry-run ~/Dropbox/Books dropbox:books
rclone sync --dry-run ~/Dropbox/Papers dropbox:papers
read -rp "Go ahead with sync (y/n)? " answer
case ${answer:0:1} in
    y|Y )
    rclone sync -P ~/Dropbox/Books dropbox:books
    rclone sync -P ~/Dropbox/Papers dropbox:papers
    ;;
    * )
        exit 0
    ;;
esac
